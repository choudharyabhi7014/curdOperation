<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet">
  </head>
  <body>
    <div class="container">
      <div class="row">
        <% data.forEach((v) => { %>
        <div class="col-lg-4 mb-4">
          <div class="card" style="width: 18rem;">
            <img src="<%= v.image %>" class="card-img-top" alt="..."
              style="height: 250px; width: 250px;">
            <div class="card-body">
              <h5 class="card-title">Product Name: <%= v.name %></h5>
              <p class="card-text">Price: <%= v.price %></p>
              <p class="card-text">Details: <%= v.details %></p>
              <a href="#" class="btn btn-success">Buy Now</a>
              <a href="/admin/delete/<%= v._id %>" class="btn btn-success">Delete</a>
              <a href="/admin/update/<%= v._id %>" class="btn btn-primary">Update</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
